// Test suite for raylib constants
// Run with: hemlock tests/test_constants.hml

let tests_passed = 0;
let tests_failed = 0;

fn assert_eq(name: string, actual: i32, expected: i32) {
    if (actual == expected) {
        print("[PASS] " + name);
        tests_passed = tests_passed + 1;
    } else {
        print("[FAIL] " + name + " - expected " + expected + ", got " + actual);
        tests_failed = tests_failed + 1;
    }
}

// ============================================================================
// Key Constants (from raylib.h)
// ============================================================================

print("=== Key Constant Tests ===");

// Alphanumeric keys
let KEY_A = 65;
let KEY_Z = 90;
let KEY_ZERO = 48;
let KEY_NINE = 57;

assert_eq("KEY_A", KEY_A, 65);
assert_eq("KEY_Z", KEY_Z, 90);
assert_eq("KEY_ZERO", KEY_ZERO, 48);
assert_eq("KEY_NINE", KEY_NINE, 57);

// Special keys
let KEY_SPACE = 32;
let KEY_ESCAPE = 256;
let KEY_ENTER = 257;
let KEY_TAB = 258;
let KEY_BACKSPACE = 259;

assert_eq("KEY_SPACE", KEY_SPACE, 32);
assert_eq("KEY_ESCAPE", KEY_ESCAPE, 256);
assert_eq("KEY_ENTER", KEY_ENTER, 257);
assert_eq("KEY_TAB", KEY_TAB, 258);
assert_eq("KEY_BACKSPACE", KEY_BACKSPACE, 259);

// Arrow keys
let KEY_RIGHT = 262;
let KEY_LEFT = 263;
let KEY_DOWN = 264;
let KEY_UP = 265;

assert_eq("KEY_RIGHT", KEY_RIGHT, 262);
assert_eq("KEY_LEFT", KEY_LEFT, 263);
assert_eq("KEY_DOWN", KEY_DOWN, 264);
assert_eq("KEY_UP", KEY_UP, 265);

// Function keys
let KEY_F1 = 290;
let KEY_F12 = 301;

assert_eq("KEY_F1", KEY_F1, 290);
assert_eq("KEY_F12", KEY_F12, 301);

// Modifier keys
let KEY_LEFT_SHIFT = 340;
let KEY_LEFT_CONTROL = 341;
let KEY_LEFT_ALT = 342;
let KEY_RIGHT_SHIFT = 344;
let KEY_RIGHT_CONTROL = 345;
let KEY_RIGHT_ALT = 346;

assert_eq("KEY_LEFT_SHIFT", KEY_LEFT_SHIFT, 340);
assert_eq("KEY_LEFT_CONTROL", KEY_LEFT_CONTROL, 341);
assert_eq("KEY_LEFT_ALT", KEY_LEFT_ALT, 342);
assert_eq("KEY_RIGHT_SHIFT", KEY_RIGHT_SHIFT, 344);
assert_eq("KEY_RIGHT_CONTROL", KEY_RIGHT_CONTROL, 345);
assert_eq("KEY_RIGHT_ALT", KEY_RIGHT_ALT, 346);

