// Minimal DrawCircle test
import {
    InitWindow, CloseWindow, WindowShouldClose, SetTargetFPS,
    BeginDrawing, EndDrawing, ClearBackground,
    DrawCircle, DrawRectangle,
    WHITE, RED, BLACK,
    IsKeyPressed, KEY_ESCAPE
} from "hemlang/raylock";

InitWindow(400, 400, "Circle Test");
SetTargetFPS(60);

while (WindowShouldClose() == 0) {
    if (IsKeyPressed(KEY_ESCAPE) != 0) {
        break;
    }

    BeginDrawing();
    ClearBackground(BLACK);

    // Rectangle for comparison - should appear
    DrawRectangle(50, 50, 100, 100, RED);

    // Circle test - center of screen
    DrawCircle(200, 200, 50.0, WHITE);

    EndDrawing();
}

CloseWindow();
print("Done");
